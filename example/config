; WM
; ---------------------------------------------
; tiling = true
border_width = 3
border_color = #ffffff

; Keybinds
; ---------------------------------------------
set $mod = Mod4
map $mod+d rofi -show drun
map $mod+Return urxvt

; Autostart
; ---------------------------------------------
exec displayctl
exec compton --config ~/.config/compton/compton.conf
exec dunst -config ~?.config/dunst/dunstrc
exec ~/.config/polybar/launch.sh
